<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".22">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/english"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/n_word1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_one"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/n_word2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_two"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/n_word3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_three"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/n_word4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_four"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/n_word5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_six"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/n_word6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_six"
            android:inputType="textPersonName"
            android:padding="2dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent=".22">

        <EditText
            android:id="@+id/n_word7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_seven"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/n_word8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_eight"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/n_word9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_nine"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/n_word10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_ten"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/n_word11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_eleven"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/n_word12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_twelve"
            android:inputType="textPersonName"
            android:padding="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LinearLayout2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".22">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/other"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/nn_word1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_one"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/nn_word2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_two"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/nn_word3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_three"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/nn_word4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_four"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/nn_word5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_five"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/nn_word6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_six"
            android:inputType="textPersonName"
            android:padding="2dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LinearLayout3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".22">

        <EditText
            android:id="@+id/nn_word7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_seven"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/nn_word8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_eight"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/nn_word9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_nine"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/nn_word10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_ten"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/nn_word11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_eleven"
            android:inputType="textPersonName"
            android:padding="2dp" />

        <EditText
            android:id="@+id/nn_word12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/word_twelve"
            android:inputType="textPersonName"
            android:padding="2dp" />

    </LinearLayout>

    <Button
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LinearLayout4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".12" />

</android.support.constraint.ConstraintLayout>
